/* CREATING STORED PROCEDURES */


/* Login information procedure */
DELIMITER //

CREATE PROCEDURE loginInfo (IN em VARCHAR(20), IN pw VARCHAR(20))
BEGIN
	SELECT user_id FROM user WHERE email = em AND password = pw;
END //
DELIMITER ;

